# Ubuntu with build tools but no Python
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install build tools but not Python
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    wget \
    curl \
    tar \
    gzip \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Remove package manager
RUN rm -rf /usr/bin/apt* /usr/bin/dpkg* /etc/apt

WORKDIR /root

# Copy TSI source
COPY . /root/tsi/

WORKDIR /root/tsi

CMD ["/bin/sh"]

