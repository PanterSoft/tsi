{
  "name": "libgit2",
  "version": "1.7.2",
  "description": "Git library",
  "source": {
    "type": "tarball",
    "url": "https://github.com/libgit2/libgit2/releases/download/v1.7.2/libgit2-1.7.2.tar.gz"
  },
  "dependencies": ["openssl", "zlib", "libssh"],
  "build_dependencies": ["pkg-config", "cmake"],
  "build_system": "cmake",
  "cmake_args": [
    "-DCMAKE_BUILD_TYPE=Release",
    "-DUSE_SSH=ON"
  ],
  "env": {}
}

