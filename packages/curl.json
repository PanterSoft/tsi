{
  "name": "curl",
  "version": "8.7.1",
  "description": "Command line tool and library for transferring data with URLs",
  "source": {
    "type": "tarball",
    "url": "https://curl.se/download/curl-8.7.1.tar.gz"
  },
  "dependencies": ["openssl", "zlib"],
  "build_dependencies": ["pkg-config"],
  "build_system": "autotools",
  "configure_args": [
    "--with-openssl",
    "--enable-http",
    "--enable-https",
    "--enable-ftp",
    "--enable-file"
  ],
  "env": {}
}

